<p id="notice"><%= notice %></p>

<h1>Steams</h1>

<table class="table">
  <thead>
    <tr>
      <th>Appid</th>
      <th>Name</th>
      <th>Price</th>
      <th>Header image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steams.each do |steam| %>
      <tr>
        <td><%= steam.appid %></td>
        <td><%= steam.name %></td>
        <td><%= steam.price %></td>
        <td><%= image_tag steam.header_image, style: "width: 200px;" rescue '' %></td>
        <td><%= link_to 'Show', steam %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @steams %>
<br>
