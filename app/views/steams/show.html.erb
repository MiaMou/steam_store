<div style="display: flex;">
  <div style="width: 800px;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% eval(@steam.screenshots).each_with_index do |screenshoot, i| %>
          <% if i == 0 %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% else %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
          <% end %>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% eval(@steam.screenshots).each_with_index do |screenshoot, i| %>
          <% if i == 0 %>
          <div class="carousel-item active">
            <%= image_tag screenshoot[:path_full], class: "d-block w-100", style: "height: 500px !important;" rescue '' %>
          </div>
          <% else %>
          <div class="carousel-item">
            <%= image_tag screenshoot[:path_full], class: "d-block w-100", style: "height: 500px !important;" rescue '' %>
          </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <br>
  </div>
  <div style="width:200px;margin-left:4%">
    <h3><%= @steam.name %></h3>
    <p><%= @steam.short_description %></p>
    <p>
      <strong>Price:</strong>
      <%= @steam.price %>
    </p>
    <%= link_to "Order", purchase_steams_path(steam_id: @steam.id), class: "btn btn-success btn-block" %>
  </div>
</div>

