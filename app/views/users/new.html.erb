<%= simple_form_for @user, url: users_path do |f| %>
  <%= f.error_notification %>

  <div class='form-inputs'>
    <%= f.input :nickname, wrapper_html:{class: "form-group"}, input_html: {class: "form-control"} %>
    <%= f.input :username, wrapper_html:{class: "form-group"}, input_html: {class: "form-control"} %>
    <%= f.input :password, wrapper_html:{class: "form-group"}, input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, wrapper_html:{class: "form-group"}, input_html: {class: "form-control"} %>
  </div>

  <div class='form-actions'>
    <%= f.submit "Register", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', url_for(:back), class: 'btn btn-default' %>
  </div>
<% end %>